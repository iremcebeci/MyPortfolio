@model List<MyPortfolio.DAL.Entities.About>
<section id="about" class="about section">
    <div class="container">
        <h2 class="section-title">Hakkımda</h2>
        <div class="about-content">
            <div class="about-image">
                <div class="image-wrapper">
                    <img src="https://via.placeholder.com/400x400" alt="Profile">
                    <div class="image-overlay"></div>
                </div>
            </div>
            <div class="about-text">
                @foreach (var item in Model)
                {
                    <h3>@item.Title</h3>
                    <p>
                        @item.SubDescription
                    </p>
                    <p>
                        @item.Details
                    </p>
                }
                
                <div class="about-stats">
                    <div class="stat-item">
                        <h4>10+</h4>
                        <p>Tamamlanan Proje</p>
                    </div>
                    <div class="stat-item">
                        <h4>5+</h4>
                        <p>Teknoloji</p>
                    </div>
                    <div class="stat-item">
                        <h4>2+</h4>
                        <p>Yıl Deneyim</p>
                    </div>
                </div>
                <a href="#" onclick="downloadCV(); return false;" class="btn btn-primary">
                    <i class="fas fa-download"></i> CV İndir
                </a>
            </div>
        </div>
    </div>
</section>