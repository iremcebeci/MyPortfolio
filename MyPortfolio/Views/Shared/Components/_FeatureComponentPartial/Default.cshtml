@model List<MyPortfolio.DAL.Entities.Feature>
<section id="home" class="hero">
    <div class="hero-background">
        <div class="code-animation"></div>
    </div>
    <div class="container hero-content">
        <div class="hero-text">

            @foreach(var item in Model)
            {
                <h1 class="hero-title">
                    @item.Title <span class="gradient-text">@item.TitleGradient</span>
                </h1>
                <p class="hero-subtitle">
                    <span class="typing-text">@item.Description</span>
                    <span class="cursor">|</span>
                </p>
            }
            <div class="hero-buttons">
                <a href="#projects" class="btn btn-primary">Projelerimi Gör</a>
                <a href="#contact" class="btn btn-secondary">İletişime Geç</a>
            </div>
            <div class="social-links">
                <a href="https://github.com" target="_blank" class="social-link">
                    <i class="fab fa-github"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" class="social-link">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="https://medium.com" target="_blank" class="social-link">
                    <i class="fab fa-medium"></i>
                </a>
                <a href="mailto:your@email.com" class="social-link">
                    <i class="fas fa-envelope"></i>
                </a>
            </div>
        </div>
        <div class="hero-image">
            <div class="image-container">
                <a href=""><img src="~/portfolio-resources/images/personal/irem_cebeci.jpeg" alt=""></a>
                <div class="floating-icons">
                    <i class="fab fa-js icon-js"></i>
                    <i class="fab fa-react icon-react"></i>
                    <i class="fab fa-python icon-python"></i>
                    <i class="fab fa-html5 icon-html"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <a href="#about">
            <i class="fas fa-chevron-down"></i>
        </a>
    </div>
</section>