<section id="contact" class="contact section">
    <div class="container">
        <h2 class="section-title">İletişime Geçin</h2>
        <div class="contact-content">
            <div class="contact-info">
                <h3>Benimle İletişime Geçin</h3>
                <p>Projeleriniz veya iş fırsatları için benimle iletişime geçmekten çekinmeyin!</p>
                <div class="contact-items">
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h4>Email</h4>
                            <p>your.email@example.com</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h4>Konum</h4>
                            <p>İstanbul, Türkiye</p>
                        </div>
                    </div>
                </div>
            </div>
            <form class="contact-form" id="contactForm">
                <div class="form-group">
                    <input type="text" id="name" name="name" placeholder="Adınız" required>
                </div>
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Email Adresiniz" required>
                </div>
                <div class="form-group">
                    <input type="text" id="subject" name="subject" placeholder="Konu" required>
                </div>
                <div class="form-group">
                    <textarea id="message" name="message" rows="5" placeholder="Mesajınız" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <span>Gönder</span>
                    <i class="fas fa-paper-plane"></i>
                </button>
            </form>
        </div>
    </div>
</section>